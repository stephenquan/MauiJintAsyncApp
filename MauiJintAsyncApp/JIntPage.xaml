<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiJintAsyncApp.JintPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiJintAsyncApp"
    x:DataType="local:JintPage"
    NavigatedFrom="ContentPage_NavigatedFrom">
    <ScrollView>
        <VerticalStackLayout Padding="30,100,30,250" Spacing="25">
            <FlexLayout BindableLayout.ItemsSource="{Binding MyItems}" Wrap="Wrap">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="local:ItemType">
                        <Grid Padding="5" WidthRequest="550">
                            <Label Text="{Binding CalculationText}" TextColor="{Binding CalculationColor}" />
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
