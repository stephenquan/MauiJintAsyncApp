<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiJintAsyncApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiJintAsyncApp"
    Title="StartPage">
    <Grid RowDefinitions="*,Auto">
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            VerticalOptions="Center">
            <Button
                Clicked="OnRunTest"
                CommandParameter="500"
                Text="Start (Fast)" />
            <Button
                Clicked="OnRunTest"
                CommandParameter="10000"
                Text="Start (Slow)" />
            <Button Clicked="OnGC" Text="GC" />
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1" Padding="30">
            <Label Text="{Binding Source={x:Static local:AppInfo.MauiVersion}, StringFormat='Maui Version: {0}'}" />
            <Label Text="{Binding Source={x:Static local:AppInfo.CommunityToolkitMauiVersion}, StringFormat='CommunityToolkit.Maui Version: {0}'}" />
            <Label Text="{Binding Source={x:Static local:AppInfo.CommunityToolkitMvvmVersion}, StringFormat='CommunityToolkit.Mvvm Version: {0}'}" />
            <Label Text="{Binding Source={x:Static local:AppInfo.JintVersion}, StringFormat='Jint Version: {0}'}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
